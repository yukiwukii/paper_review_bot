# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin User IDs (comma-separated list of Telegram user IDs)
# These users can manage the queue
# To get your user ID, message @userinfobot on Telegram
ADMIN_USER_IDS=123456789,987654321

# Reminder schedule (cron format: minute hour day_of_week)
# Day of week: 0=Monday, 1=Tuesday, ..., 6=Sunday
# Example: "0 9 0" means Monday at 9:00 AM
REMINDER_SCHEDULE_MINUTE=0
REMINDER_SCHEDULE_HOUR=9
REMINDER_SCHEDULE_DAY_OF_WEEK=0

# Timezone for scheduling
# Examples: UTC, America/New_York, Europe/London, Asia/Tokyo
TIMEZONE=UTC
AUTOPOP_SCHEDULE_MINUTE=0
AUTOPOP_SCHEDULE_HOUR=
AUTOPOP_SCHEDULE_DAY_OF_WEEK=0
